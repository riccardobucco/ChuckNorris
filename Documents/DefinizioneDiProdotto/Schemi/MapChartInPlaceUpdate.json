{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "MapChartInPlaceUpdate",
    "description": "The data contained in a MapChart InPlace update object",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "position": {
                "type": "object",
                "properties": {
                    "series": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "index": {
                        "type": "integer",
                        "minimum": 0
                    }
                },
                "oneOf": [
                    {"required": ["x","y"]},
                    {"required": ["id"]},
                ]
            },
            "data": {
                "type": "object",
                "properties": {
                    "x": {
                        "type": "number"
                    },
                    "y": {
                        "type": "number"
                    },
                    "id": {
                        "type": "string"
                    }
                },
                "required": ["x","y"]
            }
        },
        "required": ["position", "data"]
    }
}
{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "TableSettings",
    "description": "The data contained in a Table settings object",
    "type": "object",
    "properties": {
        "title": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "maxRows": {
            "type": "integer",
            "minimum": 1
        },
        "showGrid": {
            "type": "boolean"
        },
        "newLinePosition": {
            "enum": [
                "top",
                "bottom"
            ]
        },
        "allowFilter": {
            "type": "boolean"
        },
        "allowSort": {
            "type": "boolean"
        },
        "allowPaginate": {
            "type": "boolean"
        }
    }
}